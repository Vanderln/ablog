
<div class="edit_post">
  <%if current_user.id == @post.user_id%>
  <form class="create_form" action="/after_edit/<%=@post.id%>" method="post">
    <ul>
     
     <p>Title: <input type="text" name="post[title]" value="<%=@post.title%>" autofocus></p>
     <p>Content: <textarea cols="50" rows="35" name="post[content]" ><%=@post.content%></textarea></p>
     <input class="dir_button" type="submit" value="Edit Blog!">
     <input type="hidden" name="post[user_id]" value="<%=@post.user_id%>">
    </form>
    <%if @post%>
    <%if @post.errors%>
    <%@post.errors.each do |key, error|%>
    <p><%=error%></p>
      <%end%>
      <%end%>
      <%end%>
<%else%>
<h1> Access denied!</h1>
<p><a href="/">Homepage</a></p>
<%end%>
</div>
