<div class="edit_post">
  <form action="/after_edit/<%=@post.id%>" method="post">
    <ul>
     <p>Author: <input type="text" name="post[author]" value="<%=@post.author%>" autofocus></p>
     <p>Title: <input type="text" name="post[title]" value="<%=@post.title%>"></p>
     <p>Content: <textarea cols="50" rows="35" name="post[content]" ><%=@post.content%></textarea></p>
     <input type="submit" value="Edit Blog!">
    </form>
    <%if @post%>
    <%if @post.errors%>
    <%@post.errors.each do |key, error|%>
    <p><%=error%></p>
      <%end%>
      <%end%>
      <%end%>
</div>
